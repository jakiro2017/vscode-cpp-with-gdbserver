{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/main",
            "miDebuggerServerAddress": "192.168.22.53:2000",
            "miDebuggerPath": "/usr/bin/gdb",
            "cwd": "/tmp",
            "args": [],
            "stopAtEntry": true,
            "externalConsole": true,
            "linux": {
                "MIMode": "gdb"
            },
            "trace": "verbose",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}